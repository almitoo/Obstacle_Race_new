<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GameActivity"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/game_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#81C784"/>

    <LinearLayout android:orientation="horizontal"
        android:layout_height="550dp"
        android:layout_below="@+id/game_heart"
        android:layout_width="match_parent">


        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_car1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:elevation="@dimen/cardview_default_elevation"
                app:srcCompat="@drawable/ic_car"/>


        </LinearLayout>


        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_4"                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_car2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:elevation="@dimen/cardview_default_elevation"
                app:srcCompat="@drawable/ic_car"

                />



        </LinearLayout>


        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_car3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:elevation="@dimen/cardview_default_elevation"
                
                app:srcCompat="@drawable/ic_car"/>

        </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_width="0dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_car4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:elevation="@dimen/cardview_default_elevation"
            app:srcCompat="@drawable/ic_car"

            />


    </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_19"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_car5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:elevation="@dimen/cardview_default_elevation"
                app:srcCompat="@drawable/ic_car"

                />


        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/game_FAB_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_right" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/game_FAB_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/ic_left" />

    <LinearLayout
        android:id="@+id/game_score"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/main_LBL_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="left"
            android:text="000"
            android:textSize="40dp"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/game_heart"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_heart" />
    </LinearLayout>


</RelativeLayout>